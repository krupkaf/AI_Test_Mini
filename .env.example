MCP_SERVERS={"abra": {"command": "uv", "args": ["run", "python", "-m", "abra_mcp.server"], "transport": "stdio"}}

# ABRA Gen API Configuration (used by ABRA MCP server)
ABRA_HOST=http://localhost:699
ABRA_DATABASE=Demo
ABRA_USERNAME=
ABRA_PASSWORD=
